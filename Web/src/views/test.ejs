<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MQTT Real-Time Dashboard</title>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <h1>Real-Time MQTT Dashboard</h1>
    <div id="data-container">
      <p>Waiting for data...</p>
    </div>
    <script>
      const socket = io();

      socket.on("dht_data", (realTimeData) => {
        console.log("Received MQTT realTimeData:", realTimeData);
        const container = document.getElementById("data-container");
        const message = `Time: ${realTimeData.date}, Temperature: ${realTimeData.temperature}, Humidity: ${realTimeData.humidity}`;
        const p = document.createElement("p");
        p.textContent = message;
        container.prepend(p);
      });
    </script>
  </body>
</html>
